---
import content from '../constants/content.json';
import { ProjectsList } from './React/ProjectsList';
import kilahUi from '../assets/images/kilahUI.png';
import { AnimatedContainer } from './React/AnimatedContainer';
---

<!-- KilahUI Featured -->
<AnimatedContainer className='col-span-12 lg:col-span-6 relative overflow-hidden' client:load>
  <a target='_blank' href='https://kilahui.vercel.app' class='group block h-full'>
    <div class='bento-container overflow-hidden relative p-0 h-52 md:h-64'>
      <img
        src={kilahUi.src}
        alt='KilahUI'
        class='w-full h-full absolute inset-0 object-cover group-hover:scale-105 transition-transform duration-700 ease-out'
      />
      <div class='absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent'></div>
      <div class='absolute inset-0 bg-gradient-to-r from-black/20 to-transparent'></div>
      <div class='absolute bottom-6 left-6 right-6 flex items-end justify-between'>
        <div>
          <p class='text-white font-bold text-lg leading-tight'>KilahUI</p>
          <p class='text-white/50 text-xs mt-1 font-mono'>Component library</p>
          <p class='text-white/30 text-[11px] font-mono'>kilahui.vercel.app</p>
        </div>
        <span
          class='text-white/60 group-hover:text-white group-hover:translate-x-0.5 group-hover:-translate-y-0.5 transition-all duration-200 text-lg'
        >
          ↗
        </span>
      </div>
    </div>
  </a>
</AnimatedContainer>

<!-- Katarogu Featured -->
<AnimatedContainer className='col-span-12 lg:col-span-6 relative overflow-hidden' client:load>
  <a target='_blank' href='https://katarogu.vercel.app' class='group block h-full'>
    <div
      class='bento-container overflow-hidden relative p-0 h-52 md:h-64 bg-[#0d0d0f]'
      style='background-image: radial-gradient(ellipse at 60% 40%, rgba(99,102,241,0.12) 0%, transparent 70%);'
    >
      <img
        src='/katarogu-high-resolution-logo.png'
        alt='Katarogu'
        class='absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition-transform duration-700 ease-out'
      />
      <div class='absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent'></div>
      <div class='absolute bottom-6 left-6 right-6 flex items-end justify-between'>
        <div>
          <p class='text-white font-bold text-lg leading-tight'>Katarogu</p>
          <p class='text-white/50 text-xs mt-1 font-mono'>Google Sheets → digital menus</p>
          <p class='text-white/30 text-[11px] font-mono'>katarogu.vercel.app</p>
        </div>
        <span
          class='text-white/60 group-hover:text-white group-hover:translate-x-0.5 group-hover:-translate-y-0.5 transition-all duration-200 text-lg'
        >
          ↗
        </span>
      </div>
    </div>
  </a>
</AnimatedContainer>

<!-- Project List -->
<AnimatedContainer className='col-span-12' client:load>
  <div class='bento-container' id='work'>
    <div class='flex items-center justify-between mb-5'>
      <p class='section-label'>{content.en.myWork.heading}</p>
      <span class='text-[11px] font-mono text-muted'
        >{content.en.myWork.projects.length} projects</span
      >
    </div>
    <ProjectsList client:only='react' />
  </div>
</AnimatedContainer>
