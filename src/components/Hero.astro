---
import content from '../constants/content.json';
import { AnimatedContainer } from './React/AnimatedContainer';
---

<AnimatedContainer client:load className='col-span-12'>
  <div class='bento-container relative overflow-hidden'>

    <!-- Decorative grid lines -->
    <div
      class='pointer-events-none absolute inset-0 opacity-[0.025]'
      style='background-image: linear-gradient(var(--foreground) 1px, transparent 1px), linear-gradient(90deg, var(--foreground) 1px, transparent 1px); background-size: 48px 48px;'
    ></div>

    <!-- Available badge -->
    <div class='mb-8 relative'>
      <span
        class='inline-flex items-center gap-2 text-[11px] font-mono font-medium text-green-500 bg-green-500/10 border border-green-500/20 rounded-full px-3 py-1.5'
      >
        <span class='block h-1.5 w-1.5 rounded-full bg-green-500 animate-pulse'></span>
        Available to work
      </span>
    </div>

    <!-- Main content -->
    <div class='flex flex-col lg:flex-row gap-10 lg:gap-12 items-start lg:items-center relative'>

      <!-- Text -->
      <div class='flex-1'>
        <h1
          class='font-black text-6xl md:text-7xl xl:text-[96px] tracking-tighter leading-[0.9] text-foreground'
        >
          Carlos<br /><span class='text-primary'>Yoan.</span>
        </h1>

        <div class='flex items-center gap-3 mt-5'>
          <span class='h-px w-6 bg-primary/60 shrink-0'></span>
          <p class='text-primary font-mono text-xs font-semibold tracking-[0.15em] uppercase'>
            {content.en.hero.heading}
          </p>
        </div>

        <p class='text-muted text-sm md:text-[15px] mt-5 max-w-[440px] leading-relaxed'>
          {content.en.hero.shortDescription}
        </p>

        <!-- Tech mini-tags -->
        <div class='flex flex-wrap gap-1.5 mt-5'>
          {
            ['React', 'Next.js', 'TypeScript', 'TailwindCSS', 'Astro'].map((tag) => (
              <span class='text-[11px] font-mono px-2.5 py-1 rounded-md bg-primary/8 border border-primary/15 text-primary font-medium'>
                {tag}
              </span>
            ))
          }
        </div>

        <div class='flex gap-3 mt-8 flex-wrap'>
          <a
            href='#social'
            class='inline-flex items-center gap-2 px-5 py-2.5 bg-primary text-white font-semibold rounded-xl text-sm hover:opacity-90 transition-opacity'
          >
            {content.en.hero.ctaButtonLabel}
          </a>
          <a
            href='https://github.com/cmollinea'
            target='_blank'
            rel='noopener noreferrer'
            class='inline-flex items-center gap-2 px-5 py-2.5 border border-border font-medium text-sm rounded-xl hover:bg-neutral-500/5 transition-colors text-muted hover:text-foreground'
          >
            GitHub
            <span class='text-[11px]'>↗</span>
          </a>
        </div>
      </div>

      <!-- Terminal card -->
      <div class='w-full lg:w-72 xl:w-80 shrink-0'>
        <div class='rounded-xl border border-border bg-[#0d0d0f] overflow-hidden text-[13px] font-mono'>
          <!-- Title bar -->
          <div class='flex items-center gap-1.5 px-4 py-3 border-b border-white/[0.06] bg-white/[0.02]'>
            <span class='h-2.5 w-2.5 rounded-full bg-red-500/70'></span>
            <span class='h-2.5 w-2.5 rounded-full bg-yellow-500/70'></span>
            <span class='h-2.5 w-2.5 rounded-full bg-green-500/70'></span>
            <span class='ml-2 text-[10px] text-white/20 tracking-wide'>~/cympledev</span>
          </div>
          <!-- Terminal content -->
          <div class='px-4 py-5 space-y-3 text-[12px] leading-relaxed'>
            <div>
              <span class='text-primary/70'>❯</span>
              <span class='text-white/40 ml-2'>whoami</span>
            </div>
            <div class='text-white/60 pl-4'>Carlos Yoan Mollinea</div>

            <div class='pt-1'>
              <span class='text-primary/70'>❯</span>
              <span class='text-white/40 ml-2'>cat role.txt</span>
            </div>
            <div class='text-white/60 pl-4'>FullStack Developer</div>

            <div class='pt-1'>
              <span class='text-primary/70'>❯</span>
              <span class='text-white/40 ml-2'>ls experience/</span>
            </div>
            <div class='pl-4 grid grid-cols-2 gap-x-4 gap-y-0.5'>
              <span class='text-primary/60'>DiAngTech</span>
              <span class='text-primary/60'>NexaLabs</span>
              <span class='text-primary/60'>Mandao</span>
              <span class='text-primary/60'>Freelance</span>
            </div>

            <div class='pt-1'>
              <span class='text-primary/70'>❯</span>
              <span class='text-white/40 ml-2'>status</span>
            </div>
            <div class='flex items-center gap-2 pl-4'>
              <span class='h-1.5 w-1.5 rounded-full bg-green-500 animate-pulse shrink-0'></span>
              <span class='text-green-400/80'>open to opportunities</span>
            </div>

            <div class='pt-1 flex items-center'>
              <span class='text-primary/70'>❯</span>
              <span class='ml-2 inline-block h-3.5 w-[7px] bg-primary/60 animate-blink'></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</AnimatedContainer>

<style>
  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }
  .animate-blink {
    animation: blink 1.1s step-end infinite;
  }
</style>
